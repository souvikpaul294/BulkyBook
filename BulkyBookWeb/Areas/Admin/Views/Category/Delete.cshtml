@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <button type="submit" class="btn btn-danger" style="width:auto">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:auto">
            Back to List
        </a>
    </div>
</form>