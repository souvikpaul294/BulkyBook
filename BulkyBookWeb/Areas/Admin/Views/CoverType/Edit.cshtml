@model CoverType
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-area="Admin" asp-controller="CoverType" asp-action="Edit">
    @Html.AntiForgeryToken()
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Cover Type</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
        <a asp-controller="CoverType" asp-action="Index" class="btn btn-secondary" style="width:auto">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}